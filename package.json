{
  "name": "@jod/urataidot-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^22.0.0"
  },
  "license": "EUPL-1.2",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "format": "prettier . --write",
    "preview": "vite preview",
    "test:unit": "vitest --run",
    "test:e2e": "playwright test",
    "prepare": "husky",
    "translations:export": "node ./scripts/translations/export-translations.js jod-urataidot-ui",
    "translations:import": "node ./scripts/translations/import-translations.js jod-urataidot-ui",
    "translations:analyze": "node ./scripts/translations/analyze-translations.js",
    "translations:check": "node ./scripts/translations/analyze-translations.js --ci --check-langs fi,sv",
    "translations:report": "node ./scripts/translations/analyze-translations.js --list-unused --list-missing fi,sv"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "wip",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "revert",
          "build",
          "ci",
          "chore"
        ]
      ]
    }
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "^5.2.1",
    "@jod/design-system": "github:Opetushallitus/jod-design-system#main",
    "@react-pdf/renderer": "^4.3.2",
    "cva": "^1.0.0-beta.4",
    "emoji-datasource-apple": "^16.0.0",
    "emoji-datasource-facebook": "^16.0.0",
    "emoji-datasource-google": "^16.0.0",
    "emoji-datasource-twitter": "^16.0.0",
    "emoji-picker-react": "^4.16.1",
    "html-react-parser": "^5.2.11",
    "i18next": "^25.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.69.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.5.0",
    "react-router": "^7.12.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.3.1",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@lavamoat/allow-scripts": "^3.4.1",
    "@lavamoat/preinstall-always-fail": "^2.1.1",
    "@playwright/test": "^1.57.0",
    "@singlestore/eslint-plugin-react-hooks-disable-import": "^1.0.2",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/react": "^16.3.1",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-sonarjs": "^3.0.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "prettier": "3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite": "^7.3.0",
    "vite-plugin-static-copy": "^3.1.4",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^4.0.16",
    "xlsx": "file:vendor/xlsx-0.20.3.tgz"
  },
  "lavamoat": {
    "allowScripts": {
      "@lavamoat/preinstall-always-fail": false,
      "@vitejs/plugin-react-swc>@swc/core": true,
      "vite>esbuild": true
    }
  }
}
