{
  "name": "@jod/urataidot-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": "^22.0.0"
  },
  "license": "EUPL-1.2",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "format": "prettier . --write",
    "preview": "vite preview",
    "test:unit": "vitest --run",
    "test:e2e": "playwright test",
    "prepare": "husky",
    "translations:export": "node ./scripts/translations/export-translations.js jod-urataidot-ui",
    "translations:import": "node ./scripts/translations/import-translations.js jod-urataidot-ui"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "wip",
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "revert",
          "build",
          "ci",
          "chore"
        ]
      ]
    }
  },
  "dependencies": {
    "@headlessui/react": "^2.2.7",
    "@hookform/error-message": "^2.0.1",
    "@hookform/resolvers": "^5.2.1",
    "@jod/design-system": "github:Opetushallitus/jod-design-system#main",
    "@react-pdf/renderer": "^4.3.0",
    "cva": "^1.0.0-beta.3",
    "emoji-datasource-apple": "^15.1.2",
    "emoji-datasource-facebook": "^15.1.2",
    "emoji-datasource-google": "^15.1.2",
    "emoji-datasource-twitter": "^15.1.2",
    "emoji-picker-react": "^4.13.2",
    "html-react-parser": "^5.2.6",
    "i18next": "^25.3.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.6.1",
    "react-router": "^7.8.0",
    "web-vitals": "^5.1.0",
    "zod": "^4.0.17",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@playwright/test": "^1.54.2",
    "@singlestore/eslint-plugin-react-hooks-disable-import": "^1.0.2",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.2.1",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-sonarjs": "^3.0.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0",
    "vite-plugin-static-copy": "^3.1.1",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.2.4",
    "xlsx": "file:vendor/xlsx-0.20.3.tgz"
  }
}
